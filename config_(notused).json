{
  "experiment_name": "image_classification_v1",
  "model": {
    "type": "SimpleCNN",
    "input_size": [224, 224, 3],
    "num_classes": 10
  },
  "training": {
    "epochs": 12,
    "batch_size": 32,
    "learning_rate": 0.001,
    "optimizer": "adam"
  },
  "dataset": {
    "name": "SyntheticImages",
    "num_samples": 5000,
    "train_split": 0.8,
    "validation_split": 0.1,
    "test_split": 0.1
  },
  "augmentation": {
    "horizontal_flip": true,
    "rotation_range": 15,
    "zoom_range": 0.1
  },
  "logging": {
    "save_checkpoints": true,
    "checkpoint_dir": "checkpoints/",
    "log_metrics": true
  }
}